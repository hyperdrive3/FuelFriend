<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/vclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/transmission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/drivetrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fuelrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fuel_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/annual_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/annual_savings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/add_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="@string/add_to_garage" />

    <Button
        android:id="@+id/profile_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="@string/back" />
</LinearLayout>